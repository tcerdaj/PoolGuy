<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:icons="clr-namespace:PoolGuy.Mobile.Resources;assembly=PoolGuy.Mobile"
             xmlns:mr="clr-namespace:MR.Gestures;assembly=MR.Gestures"
             xmlns:conv="clr-namespace:PoolGuy.Mobile.Converter;assembly=PoolGuy.Mobile"
             xmlns:mycc="clr-namespace:PoolGuy.Mobile.CustomControls"
             x:Class="PoolGuy.Mobile.Views.CustomerPage"
             xmlns:xct="http://xamarin.com/schemas/2020/toolkit"
             xmlns:act="clr-namespace:PoolGuy.Mobile.Triggers"
             Title="{Binding Title}">
    <!--Go back command-->
    <Shell.BackButtonBehavior>
        <BackButtonBehavior Command="{Binding GoBackCommand}" />
    </Shell.BackButtonBehavior>
    <ContentPage.Resources>
        <ResourceDictionary>
            <Style TargetType="Button">
                <Setter Property="TextTransform"
                        Value="None" />
                <Setter Property="Margin"
                        Value="0" />
            </Style>
            <Style TargetType="Label">
                <Setter Property="FontFamily"
                        Value="RobotoRegular" />
            </Style>
            <Style TargetType="Entry">
                <Setter Property="FontFamily"
                        Value="RobotoRegular" />
                <Setter Property="Placeholder"
                        Value="Type Here" />
            </Style>
            <Style TargetType="Editor">
                <Setter Property="FontFamily"
                        Value="RobotoRegular" />
                <Setter Property="FontSize"
                        Value="12" />
                <Setter Property="Placeholder"
                        Value="Type Here" />
            </Style>
            <Style TargetType="Frame">
                <Setter Property="BorderColor"
                        Value="#D8D8D8" />
                <Setter Property="CornerRadius"
                        Value="6" />
                <Setter Property="Padding"
                        Value="10,0" />
                <Setter Property="HasShadow"
                        Value="False" />
            </Style>
            <conv:StringEmptinessToBoolConverter x:Key="StringToBoolConverter" />
            <conv:InverseBooleanConverter x:Key="InverseBoolConverter" />
            <conv:ImageUrlConverter x:Key="ImageUrlConverter" />
            <conv:CollectionEmptyToBool x:Key="ListToBoolConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>
    <ContentPage.Content>
        <StackLayout BackgroundColor="White"
                     Spacing="0">
            <!--****************-->
            <!-- Navigation Bar -->
            <!--****************-->
            <AbsoluteLayout BackgroundColor="{StaticResource Primary}"
                            HeightRequest="45"
                            MinimumHeightRequest="45"
                            HorizontalOptions="FillAndExpand"
                            VerticalOptions="Fill">
                <mycc:AnimatedButton AbsoluteLayout.LayoutBounds="0, 0.5, .25, 1"
                                     AbsoluteLayout.LayoutFlags="All"
                                     TouchUpCommand="{Binding GoBackCommand}">
                    <Image AbsoluteLayout.LayoutBounds="0, 0.5, .50, 1"
                           Aspect="AspectFit"
                           AbsoluteLayout.LayoutFlags="All">
                        <Image.Source>
                            <FontImageSource FontFamily="{StaticResource MaterialFontFamily}"
                                             Glyph="{x:Static icons:MaterialDesignIcons.ChevronLeft}"
                                             Size="20"
                                             Color="{StaticResource Title}" />
                        </Image.Source>
                    </Image>
                </mycc:AnimatedButton>
                <Label Text="{Binding Title}"
                       TextColor="{StaticResource Title}"
                       FontSize="17"
                       FontAttributes="Bold"
                       AbsoluteLayout.LayoutBounds="0.5, 0.5, -1, -1"
                       AbsoluteLayout.LayoutFlags="PositionProportional" />
            </AbsoluteLayout>
            <AbsoluteLayout VerticalOptions="FillAndExpand"
                            HorizontalOptions="FillAndExpand">
                <ScrollView AbsoluteLayout.LayoutBounds="0,0,1,1"
                            AbsoluteLayout.LayoutFlags="All">
                    <Grid VerticalOptions="Start"
                          Margin="12,24"
                          RowSpacing="24">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <!--Customer Info-->
                        <xct:Expander Grid.Row="0"
                                      x:Name="customerInfoExpander"
                                      Margin="0,20,0,0">
                            <xct:Expander.Header>
                                <StackLayout Orientation="Horizontal"
                                             Spacing="5"
                                             HorizontalOptions="FillAndExpand">
                                    <!--Arrow Icon-->
                                    <AbsoluteLayout VerticalOptions="Center"
                                                    HeightRequest="24"
                                                    WidthRequest="24">
                                        <Path Data="M0.292893 0.292893C0.683418 -0.0976311 1.31658 -0.0976311 1.70711 0.292893L5 3.58579L8.29289 0.292893C8.68342 -0.0976311 9.31658 -0.0976311 9.70711 0.292893C10.0976 0.683417 10.0976 1.31658 9.70711 1.70711L5.77782 5.6364C5.34824 6.06598 4.65176 6.06597 4.22218 5.6364L0.292893 1.70711C-0.0976311 1.31658 -0.0976311 0.683417 0.292893 0.292893Z"
                                              Fill="#0E64D8"
                                              StrokeThickness="0"
                                              AbsoluteLayout.LayoutBounds="0,.5,-1,-1"
                                              AbsoluteLayout.LayoutFlags="PositionProportional">
                                            <Path.Triggers>
                                                <DataTrigger TargetType="Path"
                                                             Binding="{Binding Source={x:Reference customerInfoExpander}, Path=IsExpanded}"
                                                             Value="True">
                                                    <Setter Property="Rotation"
                                                            Value="180" />
                                                    <Setter Property="Fill"
                                                            Value="#000000" />
                                                </DataTrigger>
                                            </Path.Triggers>
                                        </Path>
                                    </AbsoluteLayout>
                                    <Label Grid.Row="0"
                                           Text="Customer Info"
                                           FontSize="22"
                                           TextColor="#0E64D8"
                                           FontFamily="RobotoRegular">
                                        <Label.Triggers>
                                            <DataTrigger TargetType="Label"
                                                         Binding="{Binding Source={x:Reference customerInfoExpander}, Path=IsExpanded}"
                                                         Value="True">
                                                <Setter Property="TextColor"
                                                        Value="#000000" />
                                            </DataTrigger>
                                        </Label.Triggers>
                                    </Label>
                                </StackLayout>
                            </xct:Expander.Header>
                            <xct:Expander.ContentTemplate>
                                <DataTemplate>
                                    <StackLayout Margin="0,24,0,0"
                                                 Spacing="24">
                                        <!--FirstName-->
                                        <StackLayout Grid.Row="1">
                                            <Label Text="First Name" />
                                            <Frame HorizontalOptions="FillAndExpand">
                                                <mycc:CustomEntry Text="{Binding Customer.FirstName}"
                                                                  HorizontalOptions="FillAndExpand"
                                                                  Placeholder="Type Here"
                                                                  MaxLength="20"
                                                                  FontSize="16"
                                                                  ReturnType="Next"
                                                                  NextCommand="{Binding NextCommand}"
                                                                  NextCommandParameter="LastName"
                                                                  TextChanged="CustomEntry_TextChanged"/>
                                            </Frame>
                                            <Label x:Name="CustomerModel_FirstNameError"
                                                   IsVisible="False"
                                                   TextColor="Red" />
                                        </StackLayout>
                                        <!--LastName-->
                                        <StackLayout Grid.Row="2">
                                            <Label Text="Last Name" />
                                            <Frame HorizontalOptions="FillAndExpand">
                                                <mycc:CustomEntry x:Name="LastName"
                                                                  Text="{Binding Customer.LastName}"
                                                                  Placeholder="Type Here"
                                                                  MaxLength="20"
                                                                  FontSize="16"
                                                                  ReturnType="Next"
                                                                  NextCommand="{Binding NextCommand}"
                                                                  NextCommandParameter="Address1"
                                                                  TextChanged="CustomEntry_TextChanged"/>
                                            </Frame>
                                            <Label x:Name="CustomerModel_LastNameError"
                                                   IsVisible="False"
                                                   TextColor="Red" />
                                        </StackLayout>
                                    </StackLayout>
                                </DataTemplate>
                            </xct:Expander.ContentTemplate>
                        </xct:Expander>
                        <!--Physical Address-->
                        <xct:Expander Grid.Row="1"
                                      x:Name="physicalAddresExpander">
                            <xct:Expander.Header>
                                <StackLayout Orientation="Horizontal" Spacing="5"
                                             HorizontalOptions="FillAndExpand">
                                    <!--Arrow Icon-->
                                    <AbsoluteLayout VerticalOptions="Center"
                                                    HeightRequest="24"
                                                    WidthRequest="24">
                                        <Path Data="M0.292893 0.292893C0.683418 -0.0976311 1.31658 -0.0976311 1.70711 0.292893L5 3.58579L8.29289 0.292893C8.68342 -0.0976311 9.31658 -0.0976311 9.70711 0.292893C10.0976 0.683417 10.0976 1.31658 9.70711 1.70711L5.77782 5.6364C5.34824 6.06598 4.65176 6.06597 4.22218 5.6364L0.292893 1.70711C-0.0976311 1.31658 -0.0976311 0.683417 0.292893 0.292893Z"
                                              Fill="#0E64D8"
                                              StrokeThickness="0"
                                              AbsoluteLayout.LayoutBounds="0,.5,-1,-1"
                                              AbsoluteLayout.LayoutFlags="PositionProportional">
                                            <Path.Triggers>
                                                <DataTrigger TargetType="Path"
                                                             Binding="{Binding Source={x:Reference physicalAddresExpander}, Path=IsExpanded}"
                                                             Value="True">
                                                    <Setter Property="Rotation"
                                                            Value="180" />
                                                    <Setter Property="Fill"
                                                            Value="#000000" />
                                                </DataTrigger>
                                            </Path.Triggers>
                                        </Path>
                                    </AbsoluteLayout>
                                    <!--Physical Address-->
                                    <Label HorizontalOptions="StartAndExpand"
                                           Text="Physical Address"
                                           FontSize="22"
                                           TextColor="#0E64D8"
                                           VerticalOptions="Center">
                                        <Label.Triggers>
                                            <DataTrigger TargetType="Label"
                                                         Binding="{Binding Source={x:Reference physicalAddresExpander}, Path=IsExpanded}"
                                                         Value="True">
                                                <Setter Property="TextColor"
                                                        Value="#000000" />
                                            </DataTrigger>
                                        </Label.Triggers>
                                    </Label>
                                </StackLayout>
                            </xct:Expander.Header>
                            <xct:Expander.ContentTemplate>
                                <DataTemplate>
                                    <Grid Margin="0,24,0,0"
                                          RowSpacing="24">
                                        <!--Address 1-->
                                        <StackLayout Grid.Row="0">
                                            <Label Text="Address Line 1" />
                                            <Frame>
                                                <mycc:CustomEntry x:Name="Address1"
                                                                  Text="{Binding Customer.HomeAddress.Address1}"
                                                                  Placeholder="Type Here"
                                                                  MaxLength="100"
                                                                  ReturnType="Next"
                                                                  NextCommand="{Binding NextCommand}"
                                                                  NextCommandParameter="Address2"
                                                                  TextChanged="CustomEntry_TextChanged" />
                                            </Frame>
                                            <Label x:Name="AddressModel_Address1Error"
                                                   IsVisible="False"
                                                   TextColor="Red" />
                                        </StackLayout>
                                        <!--Address2-->
                                        <StackLayout Grid.Row="1">
                                            <Label Text="Address Line 2" />
                                            <Frame>
                                                <mycc:CustomEntry x:Name="Address2"
                                                                  Text="{Binding Customer.HomeAddress.Address2}"
                                                                  Placeholder="Type Here"
                                                                  MaxLength="100"
                                                                  ReturnType="Next"
                                                                  NextCommand="{Binding NextCommand}"
                                                                  NextCommandParameter="City"
                                                                  TextChanged="CustomEntry_TextChanged" />
                                            </Frame>
                                            <Label x:Name="AddressModel_Address2Error"
                                                   IsVisible="False"
                                                   TextColor="Red" />
                                        </StackLayout>
                                        <!--City-->
                                        <StackLayout Grid.Row="2">
                                            <Label Text="City" />
                                            <Frame>
                                                <mycc:CustomEntry x:Name="City"
                                                                  Text="{Binding Customer.HomeAddress.City}"
                                                                  Placeholder="Type Here"
                                                                  MaxLength="80"
                                                                  ReturnType="Next"
                                                                  NextCommand="{Binding NextCommand}"
                                                                  NextCommandParameter="State"
                                                                  TextChanged="CustomEntry_TextChanged" />
                                            </Frame>
                                            <Label x:Name="AddressModel_CityError"
                                                   IsVisible="False"
                                                   TextColor="Red" />
                                        </StackLayout>

                                        <!--State-->
                                        <StackLayout Grid.Row="3">
                                            <Label Text="State" />
                                            <Frame>
                                                <mycc:CustomEntry x:Name="State"
                                                                  Text="{Binding Customer.HomeAddress.State}"
                                                                  Placeholder="Type Here"
                                                                  MaxLength="50"
                                                                  ReturnType="Next"
                                                                  NextCommand="{Binding NextCommand}"
                                                                  NextCommandParameter="Zip"
                                                                  TextChanged="CustomEntry_TextChanged" />
                                            </Frame>
                                            <Label x:Name="AddressModel_StateError"
                                                   IsVisible="False"
                                                   TextColor="Red" />
                                        </StackLayout>
                                        <!--Zip-->
                                        <StackLayout Grid.Row="4">
                                            <Label Text="Zip" />
                                            <Frame>
                                                <mycc:CustomEntry x:Name="Zip"
                                                                  Text="{Binding Customer.HomeAddress.Zip}"
                                                                  Placeholder="Type Here"
                                                                  MaxLength="10"
                                                                  ReturnType="Next"
                                                                  NextCommand="{Binding NextCommand}"
                                                                  NextCommandParameter="AdditionalInformation"
                                                                  HasDone="True"
                                                                  TextChanged="CustomEntry_TextChanged" />
                                            </Frame>
                                        </StackLayout>
                                    </Grid>
                                </DataTemplate>
                            </xct:Expander.ContentTemplate>
                        </xct:Expander>
                        <!--Billing Address-->
                        <xct:Expander Grid.Row="2"
                                      x:Name="billingAddresExpander">
                            <xct:Expander.Header>
                                <StackLayout Orientation="Horizontal"
                                             Spacing="5"
                                             HorizontalOptions="FillAndExpand">
                                    <!--Arrow Icon-->
                                    <AbsoluteLayout VerticalOptions="Center"
                                                    HeightRequest="24"
                                                    WidthRequest="24">
                                        <Path Data="M0.292893 0.292893C0.683418 -0.0976311 1.31658 -0.0976311 1.70711 0.292893L5 3.58579L8.29289 0.292893C8.68342 -0.0976311 9.31658 -0.0976311 9.70711 0.292893C10.0976 0.683417 10.0976 1.31658 9.70711 1.70711L5.77782 5.6364C5.34824 6.06598 4.65176 6.06597 4.22218 5.6364L0.292893 1.70711C-0.0976311 1.31658 -0.0976311 0.683417 0.292893 0.292893Z"
                                              Fill="#0E64D8"
                                              StrokeThickness="0"
                                              AbsoluteLayout.LayoutBounds="0,.5,-1,-1"
                                              AbsoluteLayout.LayoutFlags="PositionProportional">
                                            <Path.Triggers>
                                                <DataTrigger TargetType="Path"
                                                             Binding="{Binding Source={x:Reference billingAddresExpander}, Path=IsExpanded}"
                                                             Value="True">
                                                    <Setter Property="Rotation"
                                                            Value="180" />
                                                    <Setter Property="Fill"
                                                            Value="#000000" />
                                                </DataTrigger>
                                            </Path.Triggers>
                                        </Path>
                                    </AbsoluteLayout>
                                    <!--Billing Address-->
                                    <Label HorizontalOptions="StartAndExpand"
                                           Text="Billing Address"
                                           FontSize="22"
                                           TextColor="#0E64D8"
                                           VerticalOptions="Center">
                                        <Label.Triggers>
                                            <DataTrigger TargetType="Label"
                                                         Binding="{Binding Source={x:Reference billingAddresExpander}, Path=IsExpanded}"
                                                         Value="True">
                                                <Setter Property="TextColor"
                                                        Value="#000000" />
                                            </DataTrigger>
                                        </Label.Triggers>
                                    </Label>
                                </StackLayout>
                            </xct:Expander.Header>
                            <xct:Expander.ContentTemplate>
                                <DataTemplate>
                                    <Grid Margin="0,24,0,0"
                                          RowSpacing="24">
                                        <!--Same Home Address CheckBox-->
                                        <mr:StackLayout Grid.Row="0"
                                                        Orientation="Horizontal"
                                                        TappedCommand="{Binding ToggleSameAddressCommand}">
                                            <!--Checked-->
                                            <AbsoluteLayout IsVisible="{Binding Customer.SameHomeAddress}"
                                                            VerticalOptions="Center"
                                                            HeightRequest="24"
                                                            WidthRequest="24">
                                                <Path Data="M0 1.44C0 0.644711 0.64471 0 1.44 0H22.56C23.3553 0 24 0.64471 24 1.44V22.56C24 23.3553 23.3553 24 22.56 24H1.44C0.644711 24 0 23.3553 0 22.56V1.44Z"
                                                      Fill="#2C842E"
                                                      StrokeThickness="0" />
                                                <Path Data="M20.7343 3.85166C21.341 4.28502 21.4815 5.12817 21.0482 5.73487L10.3339 20.7349C10.0927 21.0726 9.70957 21.2806 9.29498 21.2989C8.8804 21.3172 8.48042 21.1439 8.21035 20.8288L3.92464 15.8288C3.43942 15.2627 3.50498 14.4104 4.07107 13.9252C4.63716 13.44 5.48941 13.5055 5.97463 14.0716L9.13863 17.763L18.8511 4.16553C19.2845 3.55882 20.1276 3.4183 20.7343 3.85166Z"
                                                      Fill="white"
                                                      StrokeThickness="0" />
                                            </AbsoluteLayout>
                                            <!--UnChecked-->
                                            <AbsoluteLayout IsVisible="{Binding Customer.SameHomeAddress,Converter={StaticResource InverseBoolConverter}}"
                                                            VerticalOptions="Center">
                                                <Path Data="M1 2.44C1 1.64471 1.64471 1 2.44 1H23.56C24.3553 1 25 1.64471 25 2.44V23.56C25 24.3553 24.3553 25 23.56 25H2.44C1.64471 25 1 24.3553 1 23.56V2.44Z"
                                                      Fill="white"
                                                      Stroke="#D8D8D8"
                                                      StrokeThickness="1"
                                                      HeightRequest="24"
                                                      WidthRequest="24"/>
                                            </AbsoluteLayout>
                                            <!--Physical Address-->
                                            <Label Grid.Row="3"
                                                   VerticalOptions="Center"
                                                   Text="Same Home Address" />
                                        </mr:StackLayout>
                                        <!--Address 1-->
                                        <StackLayout Grid.Row="1">
                                            <Label Text="Address Line 1" />
                                            <Frame>
                                                <mycc:CustomEntry x:Name="Address1"
                                                                  Text="{Binding Customer.Address.Address1}"
                                                                  Placeholder="Type Here"
                                                                  MaxLength="100"
                                                                  ReturnType="Next"
                                                                  NextCommand="{Binding NextCommand}"
                                                                  NextCommandParameter="Address2"
                                                                  TextChanged="CustomEntry_TextChanged" />
                                            </Frame>
                                            <Label x:Name="AddressModel_Address1Error"
                                                   IsVisible="False"
                                                   TextColor="Red" />
                                        </StackLayout>
                                        <!--Address2-->
                                        <StackLayout Grid.Row="2">
                                            <Label Text="Address Line 2" />
                                            <Frame>
                                                <mycc:CustomEntry x:Name="Address2"
                                                                  Text="{Binding Customer.Address.Address2}"
                                                                  Placeholder="Type Here"
                                                                  MaxLength="100"
                                                                  ReturnType="Next"
                                                                  NextCommand="{Binding NextCommand}"
                                                                  NextCommandParameter="City"
                                                                  TextChanged="CustomEntry_TextChanged" />
                                            </Frame>
                                            <Label x:Name="AddressModel_Address2Error"
                                                   IsVisible="False"
                                                   TextColor="Red" />
                                        </StackLayout>
                                        <!--City-->
                                        <StackLayout Grid.Row="3">
                                            <Label Text="City" />
                                            <Frame>
                                                <mycc:CustomEntry x:Name="City"
                                                                  Text="{Binding Customer.Address.City}"
                                                                  Placeholder="Type Here"
                                                                  MaxLength="80"
                                                                  ReturnType="Next"
                                                                  NextCommand="{Binding NextCommand}"
                                                                  NextCommandParameter="State"
                                                                  TextChanged="CustomEntry_TextChanged" />
                                            </Frame>
                                            <Label x:Name="AddressModel_CityError"
                                                   IsVisible="False"
                                                   TextColor="Red" />
                                        </StackLayout>

                                        <!--State-->
                                        <StackLayout Grid.Row="4">
                                            <Label Text="State" />
                                            <Frame>
                                                <mycc:CustomEntry x:Name="State"
                                                                  Text="{Binding Customer.Address.State}"
                                                                  Placeholder="Type Here"
                                                                  MaxLength="50"
                                                                  ReturnType="Next"
                                                                  NextCommand="{Binding NextCommand}"
                                                                  NextCommandParameter="Zip"
                                                                  TextChanged="CustomEntry_TextChanged" />
                                            </Frame>
                                            <Label x:Name="AddressModel_StateError"
                                                   IsVisible="False"
                                                   TextColor="Red" />
                                        </StackLayout>
                                        <!--Zip-->
                                        <StackLayout Grid.Row="5">
                                            <Label Text="Zip" />
                                            <Frame>
                                                <mycc:CustomEntry x:Name="Zip"
                                                                  Text="{Binding Customer.Address.Zip}"
                                                                  Placeholder="Type Here"
                                                                  MaxLength="10"
                                                                  ReturnType="Next"
                                                                  NextCommand="{Binding NextCommand}"
                                                                  NextCommandParameter="AdditionalInformation"
                                                                  HasDone="True"
                                                                  TextChanged="CustomEntry_TextChanged" />
                                            </Frame>
                                        </StackLayout>
                                    </Grid>
                                </DataTemplate>
                            </xct:Expander.ContentTemplate>
                        </xct:Expander>
                        <!--Contact Info-->
                        <xct:Expander Grid.Row="3"
                                      x:Name="contactInfoExpander">
                            <xct:Expander.Header>
                                <StackLayout Orientation="Horizontal"
                                             Spacing="5"
                                             HorizontalOptions="FillAndExpand">
                                    <!--Arrow Icon-->
                                    <AbsoluteLayout VerticalOptions="Center"
                                                    HeightRequest="24"
                                                    WidthRequest="24">
                                        <Path Data="M0.292893 0.292893C0.683418 -0.0976311 1.31658 -0.0976311 1.70711 0.292893L5 3.58579L8.29289 0.292893C8.68342 -0.0976311 9.31658 -0.0976311 9.70711 0.292893C10.0976 0.683417 10.0976 1.31658 9.70711 1.70711L5.77782 5.6364C5.34824 6.06598 4.65176 6.06597 4.22218 5.6364L0.292893 1.70711C-0.0976311 1.31658 -0.0976311 0.683417 0.292893 0.292893Z"
                                              Fill="#0E64D8"
                                              StrokeThickness="0"
                                              AbsoluteLayout.LayoutBounds="0,.5,-1,-1"
                                              AbsoluteLayout.LayoutFlags="PositionProportional">
                                            <Path.Triggers>
                                                <DataTrigger TargetType="Path"
                                                             Binding="{Binding Source={x:Reference contactInfoExpander}, Path=IsExpanded}"
                                                             Value="True">
                                                    <Setter Property="Rotation"
                                                            Value="180" />
                                                    <Setter Property="Fill"
                                                            Value="#000000" />
                                                </DataTrigger>
                                            </Path.Triggers>
                                        </Path>
                                    </AbsoluteLayout>
                                    <!--Contact Info-->
                                    <Label HorizontalOptions="StartAndExpand"
                                           Text="Contact Information"
                                           FontSize="22"
                                           TextColor="#0E64D8"
                                           VerticalOptions="Center">
                                        <Label.Triggers>
                                            <DataTrigger TargetType="Label"
                                                         Binding="{Binding Source={x:Reference contactInfoExpander}, Path=IsExpanded}"
                                                         Value="True">
                                                <Setter Property="TextColor"
                                                        Value="#000000" />
                                            </DataTrigger>
                                        </Label.Triggers>
                                    </Label>
                                </StackLayout>
                            </xct:Expander.Header>
                            <xct:Expander.ContentTemplate>
                                <DataTemplate>
                                    <Grid Margin="0,24,0,0"
                                          RowSpacing="24"
                                          ColumnDefinitions="50*, 50*">
                                        <!--Phone-->
                                        <StackLayout Grid.Column="0">
                                            <Label Text="Phone" />
                                            <Frame>
                                                <mycc:CustomEntry x:Name="Phone"
                                                                  Text="{Binding Customer.Contact.Phone}"
                                                                  Placeholder="Type Here"
                                                                  MaxLength="100"
                                                                  ReturnType="Next"
                                                                  NextCommand="{Binding NextCommand}"
                                                                  NextCommandParameter="CellPhone"
                                                                  TextChanged="CustomEntry_TextChanged"/>
                                            </Frame>
                                            <Label x:Name="ContactModel_PhoneError"
                                                   IsVisible="False"
                                                   TextColor="Red" />
                                        </StackLayout>
                                        <!--Cell Phone-->
                                        <StackLayout Grid.Column="1">
                                            <Label Text="Cell Phone" />
                                            <Frame>
                                                <mycc:CustomEntry x:Name="CellPhone"
                                                                  Text="{Binding Customer.Contact.CellPhone}"
                                                                  Placeholder="Type Here"
                                                                  MaxLength="100"
                                                                  ReturnType="Next"
                                                                  NextCommand="{Binding NextCommand}"
                                                                  NextCommandParameter="Email"
                                                                  TextChanged="CustomEntry_TextChanged" />
                                            </Frame>
                                            <Label x:Name="ContactModel_CellPhoneError"
                                                   IsVisible="False"
                                                   TextColor="Red" />
                                        </StackLayout>
                                        <!--Email-->
                                        <StackLayout Grid.ColumnSpan="2"
                                                     Grid.Row="1">
                                            <Label Text="Email" />
                                            <Frame>
                                                <mycc:CustomEntry x:Name="Email"
                                                                  Text="{Binding Customer.Contact.Email}"
                                                                  Placeholder="Type Here"
                                                                  MaxLength="100"
                                                                  ReturnType="Next"
                                                                  NextCommand="{Binding NextCommand}"
                                                                  NextCommandParameter="Address2"
                                                                  TextChanged="CustomEntry_TextChanged" />
                                            </Frame>
                                            <Label x:Name="ContactModel_EmailError"
                                                   IsVisible="False"
                                                   TextColor="Red" />
                                        </StackLayout>
                                    </Grid>
                                </DataTemplate>
                            </xct:Expander.ContentTemplate>
                        </xct:Expander>
                        <!--Pool Info-->
                        <xct:Expander Grid.Row="4"
                                      x:Name="poolInfoExpander">
                            <xct:Expander.Header>
                                <StackLayout Orientation="Horizontal"
                                             Spacing="5"
                                             HorizontalOptions="FillAndExpand">
                                    <!--Arrow Icon-->
                                    <AbsoluteLayout VerticalOptions="Center"
                                                    HeightRequest="24"
                                                    WidthRequest="24">
