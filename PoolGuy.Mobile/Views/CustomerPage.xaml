                                           VerticalOptions="Center">
                                        <Label.Triggers>
                                            <DataTrigger TargetType="Label"
                                                         Binding="{Binding Source={x:Reference poolInfoExpander}, Path=IsExpanded}"
                                                         Value="True">
                                                <Setter Property="TextColor"
                                                        Value="#000000" />
                                            </DataTrigger>
                                        </Label.Triggers>
                                    </Label>
                                </StackLayout>
                            </xct:Expander.Header>
                            <xct:Expander.ContentTemplate>
                                <DataTemplate>
                                    <Grid x:Name="poolMainContent"
                                          Margin="0,24,0,0"
                                          RowSpacing="24"
                                          RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto,Auto,*">
                                        <!--Type-->
                                        <mr:Frame Grid.Row="0"
                                                  BorderColor="#D8D8D8"
                                                  Padding="12,7"
                                                  Margin="0"
                                                  CornerRadius="6"
                                                  HasShadow="False"
                                                  Tapped="PoolType_OnTapped">
                                            <StackLayout Orientation="Horizontal"
                                                         VerticalOptions="Fill">
                                                <Label  Text="{Binding Customer.Pool.Type}"
                                                        VerticalOptions="Center"
                                                        FontSize="16"
                                                        HorizontalOptions="FillAndExpand" />
                                                <Label Text="{x:Static icons:MaterialDesignIcons.ChevronDown}"
                                                       FontFamily="{StaticResource MaterialFontFamily}"
                                                       FontSize="30"
                                                       HorizontalOptions="End"
                                                       VerticalOptions="Center" />
                                            </StackLayout>
                                        </mr:Frame>
                                        <Label Grid.Row="1"
                                               x:Name="PoolModel_TypeError"
                                               IsVisible="False"
                                               TextColor="Red" />
                                        <!--Surface-->
                                        <Frame Grid.Row="1">
                                            <mycc:CustomEntry x:Name="Surface"
                                                              Text="{Binding Customer.Pool.Surface}"
                                                              Placeholder="Type Here"
                                                              MaxLength="200"
                                                              Keyboard="Numeric"
                                                              ReturnType="Next"
                                                              NextCommand="{Binding NextCommand}"
                                                              NextCommandParameter="Capacity"
                                                              TextChanged="CustomEntry_TextChanged"/>
                                        </Frame>
                                        <Label Grid.Row="3"
                                               x:Name="PoolModel_SurfaceError"
                                               IsVisible="False"
                                               TextColor="Red" />
                                        <!--Capacity-->
                                        <Frame Grid.Row="2">
                                            <mycc:CustomEntry x:Name="Capacity"
                                                              Text="{Binding Customer.Pool.Capacity}"
                                                              Placeholder="Type Here"
                                                              MaxLength="200"
                                                              Keyboard="Numeric"
                                                              ReturnType="Done"
                                                              HasDone="True"
                                                              TextChanged="CustomEntry_TextChanged" />
                                        </Frame>
                                        <Label Grid.Row="5"
                                               x:Name="PoolModel_CapacityError"
                                               IsVisible="False"
                                               TextColor="Red" />
                                        <!--Images-->
                                        <Frame Grid.Row="3">
                                            <StackLayout Margin="0,0,0,10">
                                                <!--Images-->
                                                <StackLayout Margin="0,10"
                                                             Orientation="Horizontal">
                                                    <Label  Text="Images"
                                                            HorizontalOptions="Start"
                                                            VerticalOptions="Center" />
                                                    <mr:Image Aspect="AspectFit"
                                                              Margin="0,0,0,0"
                                                              HorizontalOptions="End"
                                                              VerticalOptions="Center"
                                                              TappedCommand="{Binding TakePhotoCommand}">
                                                        <mr:Image.Triggers>
                                                            <EventTrigger Event="Down">
                                                                <act:ScaleDownTriggerAction />
                                                            </EventTrigger>
                                                            <EventTrigger Event="Up">
                                                                <act:ScaleUpTriggerAction />
                                                            </EventTrigger>
                                                        </mr:Image.Triggers>
                                                        <Image.Source>
                                                            <FontImageSource FontFamily="{StaticResource MaterialFontFamily}"
                                                                             Glyph="{x:Static icons:MaterialDesignIcons.PlusCircle}"
                                                                             Size="30"
                                                                             Color="{StaticResource Primary}" />
                                                        </Image.Source>
                                                    </mr:Image>
                                                </StackLayout>
                                                <!--Image list-->
                                                <ScrollView>
                                                    <FlexLayout x:Name="imageList"
                                                                Wrap="Wrap"
                                                                JustifyContent="Start"
                                                                BindableLayout.ItemsSource="{Binding Customer.Pool.Images}">
                                                        <BindableLayout.ItemTemplate>
                                                            <DataTemplate>
                                                                <AbsoluteLayout x:Name="ImageLayout"
                                                                                Margin="10,0"
                                                                                VerticalOptions="FillAndExpand">
                                                                    <!--Image-->
                                                                    <mr:Image x:Name="CurrentEquipmentTemplate"
                                                                              Source="{Binding ImageUrl}"
                                                                              Aspect="AspectFill"
                                                                              Margin="0,10,0,0"
                                                                              AbsoluteLayout.LayoutBounds="0,0.5,70,80"
                                                                              AbsoluteLayout.LayoutFlags="PositionProportional"
                                                                              TappedCommand="{Binding BindingContext.SelectImageCommand, Source={x:Reference poolMainContent}}"
                                                                              TappedCommandParameter="{Binding BindingContext, Source={x:Reference ImageLayout}}">
                                                                        <mr:Image.Triggers>
                                                                            <EventTrigger Event="Down">
                                                                                <act:ScaleDownTriggerAction />
                                                                            </EventTrigger>
                                                                            <EventTrigger Event="Up">
                                                                                <act:ScaleUpTriggerAction />
                                                                            </EventTrigger>
                                                                        </mr:Image.Triggers>
                                                                    </mr:Image>
                                                                    <!--Delete icon-->
                                                                    <mycc:AnimatedButton AbsoluteLayout.LayoutBounds="1.15,0.05,20,20"
                                                                                         AbsoluteLayout.LayoutFlags="PositionProportional"
                                                                                         TappedCommand="{Binding BindingContext.DeleteImageCommand, Source={x:Reference poolMainContent}}"
                                                                                         TappedCommandParameter="{Binding BindingContext, Source={x:Reference ImageLayout}}">
                                                                        <Ellipse AbsoluteLayout.LayoutBounds="0,0,17,17"
                                                                                 AbsoluteLayout.LayoutFlags="PositionProportional"
                                                                                 Fill="White"
                                                                                 StrokeThickness="0" />
