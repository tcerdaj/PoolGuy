                                                                              Fill="#7B7B7B"
                                                                              StrokeThickness="0" />
                                                                        <Path Data="M12.0669 5.92476C12.3207 6.1786 12.3207 6.59016 12.0669 6.844L6.84399 12.0668C6.59015 12.3206 6.17859 12.3206 5.92475 12.0668C5.67091 11.8129 5.67092 11.4013 5.92476 11.1475L11.1476 5.92475C11.4015 5.67091 11.813 5.67092 12.0669 5.92476Z"
                                                                              Fill="#7B7B7B"
                                                                              StrokeThickness="0" />
                                                                        <Path Data="M5.92475 5.92476C6.17859 5.67092 6.59015 5.67091 6.84399 5.92475L12.0669 11.1475C12.3207 11.4013 12.3207 11.8129 12.0669 12.0668C11.813 12.3206 11.4015 12.3206 11.1476 12.0668L5.92476 6.844C5.67092 6.59016 5.67091 6.1786 5.92475 5.92476Z"
                                                                              Fill="#7B7B7B"
                                                                              StrokeThickness="0" />
                                                                    </mycc:AnimatedButton>
                                                                </AbsoluteLayout>
                                                            </DataTemplate>
                                                        </BindableLayout.ItemTemplate>
                                                    </FlexLayout>
                                                </ScrollView>
                                            </StackLayout>
                                        </Frame>
                                        <!--Equipments-->
                                        <Frame Grid.Row="4">
                                            <StackLayout  Margin="0,0,0,10">
                                                <!--Add button-->
                                                <StackLayout Margin="0,10"
                                                             Orientation="Horizontal">
                                                    <Label  Text="Equipment"
                                                            HorizontalOptions="Start"
                                                            VerticalOptions="Center" />
                                                    <mr:Image Aspect="AspectFit"
                                                              Margin="0,0,0,0"
                                                              HorizontalOptions="End"
                                                              VerticalOptions="Center"
                                                              TappedCommand="{Binding GoToAddEquipmentCommand}">
                                                        <mr:Image.Triggers>
                                                            <EventTrigger Event="Down">
                                                                <act:ScaleDownTriggerAction />
                                                            </EventTrigger>
                                                            <EventTrigger Event="Up">
                                                                <act:ScaleUpTriggerAction />
                                                            </EventTrigger>
                                                        </mr:Image.Triggers>
                                                        <Image.Source>
                                                            <FontImageSource FontFamily="{StaticResource MaterialFontFamily}"
                                                                             Glyph="{x:Static icons:MaterialDesignIcons.PlusCircle}"
                                                                             Size="30"
                                                                             Color="{StaticResource Primary}" />
                                                        </Image.Source>
                                                    </mr:Image>
                                                </StackLayout>
                                                <!--Equipment List-->
                                                <CollectionView x:Name="EquipmentList"
                                                                IsVisible="{Binding Customer.Pool.Equipments, Converter={StaticResource ListToBoolConverter}}"
                                                                VerticalOptions="Start"
                                                                HeightRequest="120"
                                                                HorizontalOptions="FillAndExpand"
                                                                ItemsSource="{Binding Customer.Pool.Equipments}"
                                                                SelectionMode="None"
                                                                ItemSizingStrategy="MeasureFirstItem"
                                                                EmptyView="No Equipments">
                                                    <CollectionView.ItemsLayout>
                                                        <GridItemsLayout Orientation="Horizontal" />
                                                    </CollectionView.ItemsLayout>
                                                    <CollectionView.ItemTemplate>
                                                        <DataTemplate>
                                                            <AbsoluteLayout x:Name="EquipmentLayout">
                                                                <StackLayout AbsoluteLayout.LayoutBounds="0,0.3,100,100"
                                                                             AbsoluteLayout.LayoutFlags="PositionProportional">
                                                                    <mr:Image x:Name="CurrentEquipmentTemplate"
                                                                              Source="{Binding ImageUrl}"
                                                                              Margin="10,0"
                                                                              Aspect="AspectFill"
                                                                              TappedCommand="{Binding Source={x:Reference EquipmentList}, Path=BindingContext.SelectEquipmentCommand}"
                                                                              TappedCommandParameter="{Binding BindingContext, Source={x:Reference EquipmentLayout}}">
                                                                        <mr:Image.Triggers>
                                                                            <EventTrigger Event="Down">
                                                                                <act:ScaleDownTriggerAction />
                                                                            </EventTrigger>
                                                                            <EventTrigger Event="Up">
                                                                                <act:ScaleUpTriggerAction />
                                                                            </EventTrigger>
                                                                        </mr:Image.Triggers>
                                                                    </mr:Image>
                                                                    <Label FontSize="10"
                                                                           Margin="20,-10,20,0"
                                                                           Text="{Binding EquipmentFullName}"
                                                                           MaxLines="3"
                                                                           LineBreakMode="TailTruncation"
                                                                           VerticalOptions="Start"
                                                                           HorizontalTextAlignment="Center"
                                                                           HorizontalOptions="FillAndExpand" />
                                                                </StackLayout>
                                                                <!--Delete button-->
                                                                <mycc:AnimatedButton AbsoluteLayout.LayoutBounds="1,0,20,20"
                                                                                     AbsoluteLayout.LayoutFlags="PositionProportional"
                                                                                     TappedCommand="{Binding BindingContext.DeleteEquipmentCommand, Source={x:Reference poolMainContent}}"
                                                                                     TappedCommandParameter="{Binding BindingContext, Source={x:Reference EquipmentLayout}}">
                                                                    <Ellipse AbsoluteLayout.LayoutBounds="0,0,17,17"
                                                                             AbsoluteLayout.LayoutFlags="PositionProportional"
                                                                             Fill="White"
                                                                             StrokeThickness="0" />
                                                                    <Path Data="M8.99961 1.64961C4.94032 1.64961 1.64961 4.94032 1.64961 8.99961C1.64961 13.0589 4.94032 16.3496 8.99961 16.3496C13.0589 16.3496 16.3496 13.0589 16.3496 8.99961C16.3496 4.94032 13.0589 1.64961 8.99961 1.64961ZM0.349609 8.99961C0.349609 4.22235 4.22235 0.349609 8.99961 0.349609C13.7769 0.349609 17.6496 4.22235 17.6496 8.99961C17.6496 13.7769 13.7769 17.6496 8.99961 17.6496C4.22235 17.6496 0.349609 13.7769 0.349609 8.99961Z"
                                                                          Fill="#7B7B7B"
                                                                          StrokeThickness="0" />
                                                                    <Path Data="M12.0669 5.92476C12.3207 6.1786 12.3207 6.59016 12.0669 6.844L6.84399 12.0668C6.59015 12.3206 6.17859 12.3206 5.92475 12.0668C5.67091 11.8129 5.67092 11.4013 5.92476 11.1475L11.1476 5.92475C11.4015 5.67091 11.813 5.67092 12.0669 5.92476Z"
                                                                          Fill="#7B7B7B"
                                                                          StrokeThickness="0" />
                                                                    <Path Data="M5.92475 5.92476C6.17859 5.67092 6.59015 5.67091 6.84399 5.92475L12.0669 11.1475C12.3207 11.4013 12.3207 11.8129 12.0669 12.0668C11.813 12.3206 11.4015 12.3206 11.1476 12.0668L5.92476 6.844C5.67092 6.59016 5.67091 6.1786 5.92475 5.92476Z"
                                                                          Fill="#7B7B7B"
                                                                          StrokeThickness="0" />
                                                                </mycc:AnimatedButton>
                                                            </AbsoluteLayout>
                                                        </DataTemplate>
                                                    </CollectionView.ItemTemplate>
                                                </CollectionView>
                                            </StackLayout>
                                        </Frame>
                                    </Grid>
                                </DataTemplate>
                            </xct:Expander.ContentTemplate>
                        </xct:Expander>
                        <!--Pin note-->
                        <StackLayout Grid.Row="5">
                            <Label Text="Pin Note" />
                            <Frame>
                                <mycc:AdjustableEditor x:Name="AdditionalInformation"
                                                       Text="{Binding Customer.AdditionalInformation}"
                                                       Placeholder="Type Here"
                                                       MaxLength="200" 
                                                       AutoSize="TextChanges"
                                                       TextChanged="CustomEntry_TextChanged"/>
                            </Frame>
                        </StackLayout>
                        <!--Active-->
                        <StackLayout Grid.Row="6"
                                     Orientation="Horizontal"
                                     Padding="10,0"
                                     IsVisible="{Binding Customer.NewCustomer, Converter={StaticResource InverseBoolConverter}}">
                            <Label Text="Off"
                                   HorizontalOptions="Start">
                                <Label.Triggers>
                                    <DataTrigger TargetType="Label"
                                                 Binding="{Binding Customer.Active}"
                                                 Value="true">
                                        <Setter Property="Text"
                                                Value="On" />
                                        <Setter Property="FontAttributes"
                                                Value="Italic, Bold" />
                                        <Setter Property="FontSize"
                                                Value="Medium" />
                                    </DataTrigger>
                                </Label.Triggers>
                            </Label>
                            <Switch x:Name="styleSwitch"
                                    HorizontalOptions="StartAndExpand"
                                    IsToggled="{Binding Customer.Active}"
                                    OnColor="{StaticResource Primary}"
                                    ThumbColor="{StaticResource Title}" />
                        </StackLayout>
                        <!--Customer since/ last visit-->
                        <StackLayout Grid.Row="7"
                                     IsVisible="{Binding Customer.NewCustomer, Converter={StaticResource InverseBoolConverter}}"
                                     HorizontalOptions="FillAndExpand"
                                     Padding="10,0">
                            <Label Text="{Binding Customer.Created, StringFormat='Since: {0:MM-dd-yy}'}"/>
                            <Label Text="{Binding Customer.DateLastVisit, StringFormat='Last visit: {0:MM-dd-yy}'}"/>
                        </StackLayout>
                        <!--Cancel/Save Buttons-->
                        <AbsoluteLayout Grid.Row="8"
                                        VerticalOptions="End"
                                        Margin="60,0">
                            <!--Cancel Button-->
                            <mycc:AnimatedButton TouchUpCommand="{Binding CancelCommand}"
                                                 AutomationId="cancel_button"
                                                 Margin="0,40,0,20"
                                                 AbsoluteLayout.LayoutBounds="0,0.5,-1,-1"
                                                 AbsoluteLayout.LayoutFlags="PositionProportional">
                                    <Label Text="Cancel"
                                           TextColor="Gray"
                                           FontSize="16"
                                           VerticalTextAlignment="Center"
                                           HorizontalTextAlignment="Center" />
                            </mycc:AnimatedButton>
                            <!--Save Button-->
                            <mycc:AnimatedButton TouchUpCommand="{Binding SaveCommand}"
                                                 AutomationId="save_button"
                                                 IsEnabled="{Binding IsEditing}"
                                                 Margin="0,40,0,20"
                                                 AbsoluteLayout.LayoutBounds="1,0.5,-1,-1"
                                                 AbsoluteLayout.LayoutFlags="PositionProportional">
                                <Frame AbsoluteLayout.LayoutBounds="0.5,0.5,-1,-1"
                                       AbsoluteLayout.LayoutFlags="PositionProportional"
                                       BackgroundColor="#98CB99"
                                       HasShadow="False"
                                       Padding="16,13,16,16">
                                    <Frame.Triggers>
                                        <DataTrigger TargetType="Frame"
                                                     Binding="{Binding IsEditing}"
                                                     Value="True">
                                            <Setter Property="BackgroundColor"
                                                    Value="#2C842E" />
                                        </DataTrigger>
                                    </Frame.Triggers>
                                    <Label Text="Save"
                                           TextColor="#FFFFFF"
                                           FontSize="16"
                                           VerticalTextAlignment="Center"
                                           HorizontalTextAlignment="Center" />
                                </Frame>
                            </mycc:AnimatedButton>
                        </AbsoluteLayout>
                    </Grid>
                </ScrollView>
                <!-- Busy Status -->
                <AbsoluteLayout AbsoluteLayout.LayoutBounds="0, 0, 1, 1"
                                AbsoluteLayout.LayoutFlags="All"
                                BackgroundColor="White"
                                Opacity="0.5"
                                IsVisible="{Binding IsBusy}">
                    <ActivityIndicator AbsoluteLayout.LayoutBounds="0.5, 0.5, -1, -1"
                                       AbsoluteLayout.LayoutFlags="PositionProportional"
                                       IsRunning="{Binding IsBusy}"
                                       IsVisible="{Binding IsBusy}" />
                </AbsoluteLayout>
            </AbsoluteLayout>
            <Picker x:Name="poolTypePicker"
                    Title="Pool Type"
                    ItemsSource="{Binding PoolTypes}"
                    IsVisible="False" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>